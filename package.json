{
  "name": "petarzarkov-profile",
  "version": "1.0.0",
  "description": "Automated GitHub profile stats generator",
  "type": "module",
  "scripts": {
    "prepare": "husky || true",
    "preinstall": "npx only-allow pnpm",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --cache --fix",
    "format": "prettier --write --cache --ignore-unknown .",
    "generate": "tsx src/main.ts",
    "gen:dev": "tsx --env-file .env src/main.ts",
    "dev": "tsx --env-file .env watch src/main.ts",
    "gen:env:docs": "tsx src/gen-env-docs.ts"
  },
  "keywords": [
    "github",
    "stats",
    "profile"
  ],
  "author": "Petar Zarkov",
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.0",
    "@types/node": "^24.9.2",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.2",
    "globals": "^16.5.0",
    "lint-staged": "^16.2.6"
  },
  "dependencies": {
    "@octokit/graphql": "^9.0.3",
    "@octokit/rest": "^22.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
